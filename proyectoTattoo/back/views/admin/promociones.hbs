<div class="holder">
<div class="containerpromociones">
        <p class="text-end">Hola {{usuario}}!</p>
        <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion <i class="fas fa-sign-out-alt"></i></a>
</div>

<div class="row listado">
        <div class="col-7">
                <h3>Listado de Promociones</h3>
        </div>
        <div class="col-5 text-end">
                <a class="btn btn-success" href="/admin/promociones/agregar"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
</div>

<div class="row">
        <div class="col">
                <table class="table">
                        <thead>
                                <tr class="table-light">
                                        <th scope="col">#</th>
                                        <th scope="col">titulo</th>

                                        <th class="text-end">Modificar</th>
                                </tr>
                        </thead>
                        <tbody>

                                {{#each promociones}}
                                <tr>
                                        <th scope="row">{{id}}</th>
                                        <td>{{titulo}}</td>
                                        <td class="text-end">
                                                <a class="btn btn-secondary" href="/admin/promociones/modificar/{{id}}"><i class="fa fa-pencil"
                                                                aria-hidden="true"></i></a>
                                                <a class="btn btn-secondary" href="/admin/promociones/eliminar/{{id}}"><i class="fa fa-trash"
                                                                aria-hidden="true"></i></a>
                                        </td>
                                </tr>
                                {{/each}}

                        </tbody>
                </table>
        </div>
</div>
</div>